<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".MainActivity"
    tools:deviceIds="wear">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="120dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/connect"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="onClick"
                        android:text="Connect"
                        android:textAlignment="center"
                        android:textSize="18sp"></Button>

                    <Button
                        android:id="@+id/connect_1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="viewSecondActivity"
                        android:text="View Controls"
                        android:textAlignment="center"
                        android:textSize="18sp" />


                    <Button
                        android:id="@+id/pick_up_object"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:text="Pick Up Object"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/place_object"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:text="Place Object"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/enter_GCM"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:text="Enter 0G Mode"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/exit_GCM"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:text="Exit 0G Mode"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/sb1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="7dp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joint 1"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/sb2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="7dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joint 2"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/sb3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="7dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joint 3"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/sb4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="7dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joint 4"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/sb5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="7dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joint 5"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/sb6"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joint 6"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ipAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:text="IP Address: 169.254.152.52"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/port"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:text="IP Address: 169.254.152.52"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:visibility="visible" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>